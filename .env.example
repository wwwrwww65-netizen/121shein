# This file contains all the environment variables needed to run the project.
# Copy this file to .env and fill in the values for your local environment.

# -- PostgreSQL Database --
# Connection string for Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/postgres?schema=public"

# -- Redis Cache --
REDIS_URL="redis://localhost:6379"

# -- MinIO S3-Compatible Storage --
# Used for local image/asset storage
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="ecom-assets"
MINIO_USE_SSL=false

# -- API Server --
# Port for the API server
PORT=4000

# -- Web & Mobile Apps --
# Public URL for the API, used by the frontend apps
NEXT_PUBLIC_API_URL="http://localhost:4000/trpc"
EXPO_PUBLIC_API_URL="http://localhost:4000/trpc" # Replace localhost with your machine's IP for mobile testing

# -- Authentication --
# Secret key for signing JWTs
JWT_SECRET="your-super-secret-jwt-key"

# -- Payment Gateway (Stripe) --
# Replace with your actual Stripe keys
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
